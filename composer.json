{
    "name": "datomatic/carta-del-docente",
    "description": "Un pacchetto per poter integrare la Carta del Docente in un progetto PHP",
    "keywords": [
        "datomatic",
        "carta-del-docente"
    ],
    "homepage": "https://github.com/datomatic/carta-del-docente",
    "license": "MIT",
    "authors": [
        {
            "name": "Alberto Peripolli",
            "email": "info@albertoperipolli.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-soap": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Datomatic\\CartaDelDocente\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datomatic\\CartaDelDocente\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
